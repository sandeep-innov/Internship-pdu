# Store your name in a variable
name = "Manjunatha"
# Store your age in a variable
age = 25
# Store your favorite hobby in a variable
hobby = "Reading"
# Print the value of the name variable
print(name)
# Print the value of the age variable
print(age)
# Print the value of the hobby variable
print(hobby)


num = int(input("Enter a number: "))

if num > 0:
    print("The number is positive.")
elif num < 0:
    print("The number is negative.")
else:
    print("The number is zero.")


year = int(input("Enter a year: "))

if (year % 4 == 0 and year % 100 != 0) or (year % 400 == 0):
    print(f"{year} is a leap year.")
else:
    print(f"{year} is not a leap year.")


for i in range(1, 11):
    print(i)

num = int(input("Enter a number: "))
i = 1

while i <= 10:
    print(f"{num} x {i} = {num * i}")
    i += 1


for i in range(1, 11):
    if i % 3 == 0:
        continue
    print(i)

for i in range(1, 11):
    if i > 5:
        break
    print(i)


def greet(name):
    print(f"Hello, {name}!")

greet("Manju")


def add_numbers(a, b):
    return a + b

result = add_numbers(3, 5)
print(result)
